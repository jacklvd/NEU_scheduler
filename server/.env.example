# NEUscheduler Server Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
API_BASE_URL=your_api_base_url_here
NU_BANNER_BASE_URL=your_nu_banner_base_url_here

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://something
# For Redis Cloud:
# REDIS_URL=redis://username:password@host:port

# OpenAI Configuration (for AI-powered features)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=your_jwt_algorithm_here  
JWT_EXPIRE_MINUTES=your_jwt_expiration_minutes_here  

# Database Configuration (if using a database)
# DATABASE_URL=your_database_url_here

# Application Settings
DEBUG=true
CORS_ORIGINS=https://localhost:3000,http://127.0.0.1:3000

# Celery Configuration
CELERY_BROKER_URL=redis://something
CELERY_RESULT_BACKEND=redis://something

# Logging
LOG_LEVEL=INFO
